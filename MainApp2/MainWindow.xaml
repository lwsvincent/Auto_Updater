<Window x:Class="MainApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Editor App - v1.0.0" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#673AB7" Padding="15">
            <TextBlock Text="Simple Text Editor"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <Border Grid.Row="1" Background="#E0E0E0" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Clear" Click="Clear_Click" Margin="0,0,10,0" Padding="15,5" Background="#FF5722" Foreground="White" BorderThickness="0"/>
                <Button Content="Word Count" Click="WordCount_Click" Margin="0,0,10,0" Padding="15,5" Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                <Button Content="Upper Case" Click="UpperCase_Click" Margin="0,0,10,0" Padding="15,5" Background="#2196F3" Foreground="White" BorderThickness="0"/>
                <Button Content="Lower Case" Click="LowerCase_Click" Padding="15,5" Background="#FF9800" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2" Margin="10">
            <TextBox x:Name="txtEditor"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     FontSize="14"
                     FontFamily="Consolas"
                     Padding="10"
                     Background="White"/>
        </Grid>

        <Border Grid.Row="3"
                Background="#9C27B0"
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="MainApp2 - Text Editor" FontWeight="Bold" FontSize="14" Foreground="White"/>
                    <TextBlock Text="Version: 1.0.0" FontSize="12" Foreground="#E1BEE7"/>
                </StackPanel>

                <TextBlock x:Name="txtStatus"
                           Grid.Column="1"
                           Text="Ready"
                           FontSize="12"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
