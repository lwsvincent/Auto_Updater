<Window x:Class="MainApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator App - v1.0.0" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Simple Calculator"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#2196F3"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Number 1:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="txtNumber1" FontSize="16" Padding="5" Margin="0,0,0,10"/>

            <TextBlock Text="Number 2:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="txtNumber2" FontSize="16" Padding="5" Margin="0,0,0,10"/>

            <UniformGrid Columns="4" Margin="0,10,0,10">
                <Button Content="+" Click="Add_Click" Margin="2" Padding="10" FontSize="18" Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                <Button Content="-" Click="Subtract_Click" Margin="2" Padding="10" FontSize="18" Background="#FF9800" Foreground="White" BorderThickness="0"/>
                <Button Content="ร" Click="Multiply_Click" Margin="2" Padding="10" FontSize="18" Background="#2196F3" Foreground="White" BorderThickness="0"/>
                <Button Content="รท" Click="Divide_Click" Margin="2" Padding="10" FontSize="18" Background="#F44336" Foreground="White" BorderThickness="0"/>
            </UniformGrid>

            <TextBlock Text="Result:" FontSize="14" Margin="0,10,0,5"/>
            <TextBox x:Name="txtResult" FontSize="20" Padding="10" IsReadOnly="True" Background="White" FontWeight="Bold" TextAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="2"
                Background="#E3F2FD"
                CornerRadius="5"
                Padding="15"
                VerticalAlignment="Bottom">
            <StackPanel>
                <TextBlock Text="MainApp1 - Calculator" FontWeight="Bold" FontSize="14" Foreground="#1976D2"/>
                <TextBlock Text="Version: 1.0.0" FontSize="12" Foreground="#666"/>
                <TextBlock Text="This is a sample calculator app to test launcher switching."
                          FontSize="11"
                          Foreground="#666"
                          TextWrapping="Wrap"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
