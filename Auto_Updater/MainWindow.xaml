<Window x:Class="Auto_Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Auto_Updater"
        mc:Ignorable="d"
        Title="Auto Updater Demo" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Auto Updater Demo Application"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <TextBlock x:Name="VersionText"
                       Text="Version: 1.0.0"
                       FontSize="16"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>

            <TextBlock x:Name="StatusText"
                       Text="Status: Ready"
                       FontSize="14"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <Button x:Name="CheckUpdateButton"
                    Content="Check for Updates"
                    Width="200"
                    Height="40"
                    FontSize="14"
                    Click="CheckUpdateButton_Click"
                    Margin="0,0,0,10"/>

            <Button x:Name="ManualUpdateButton"
                    Content="Manual Update URL"
                    Width="200"
                    Height="40"
                    FontSize="14"
                    Click="ManualUpdateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
